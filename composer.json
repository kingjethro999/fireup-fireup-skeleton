{
  "name": "fireup/fireup-skeleton",
  "description": "FireUp PHP Framework starter project.",
  "type": "project",
  "license": "MIT",
  "require": {
    "fireup/fireup": "^1.0.1",
    "fakerphp/faker": "^1.23"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0",
    "squizlabs/php_codesniffer": "^3.6"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    }
  },
  "scripts": {
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "post-create-project-cmd": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "test": "phpunit",
    "cs-check": "phpcs",
    "cs-fix": "phpcbf"
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
